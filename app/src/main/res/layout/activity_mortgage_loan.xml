<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.fin.kekanepc.finbucket.MortgageLoan"
    android:background="#3b3347">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.michaldrabik.tapbarmenulib.TapBarMenu
            android:id="@+id/tapBarMenu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:tbm_buttonSize="40dp"
            app:tbm_showItems="false"
            app:tbm_backgroundColor="#00ffffff"
            app:tbm_buttonPosition="left"
            app:tbm_menuAnchor="top"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/item1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:layout_marginLeft="45dp"
                android:src="@drawable/homeee"
                />
            <ImageView
                android:id="@+id/item2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:src="@drawable/tc"
                />

            <ImageView
                android:id="@+id/item3"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:src="@drawable/contactus"
                />

            <ImageView
                android:id="@+id/item4"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:src="@drawable/aboutus"
                />
        </com.michaldrabik.tapbarmenulib.TapBarMenu>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tapBarMenu"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttoncalculate"
                    android:text="Get Emi"
                    android:layout_gravity="center"
                    android:src="@drawable/btn"
                    android:background="@drawable/share"
                    android:textColor="#ffffff"
                    android:layout_marginTop="30dp" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/think"
                    android:text="Calculate Emi"
                    android:layout_gravity="center"
                    android:src="@drawable/btn"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/share"
                    android:textColor="#ffffff" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/picmortage"
                        android:scaleType="fitXY"
                        android:layout_marginTop="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp">
                    <com.fin.kekanepc.finbucket.ExpandablePanel
                        android:id="@+id/foo"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        app:handle="@+id/expand"
                        app:content="@+id/value"
                        app:collapsedHeight="200dp"
                        app:animationDuration="50"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/value"
                            android:textColor="#ffffff"
                            android:text="A mortgage loan, also referred to as a mortgage, is used by purchasers of real property to raise capital to buy real estate; or by existing property owners to raise funds for any purpose while putting a lien on the property being mortgaged. The loan is secured on the borrower's property."
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <Button
                            android:id="@id/expand"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/down"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true" />
                    </com.fin.kekanepc.finbucket.ExpandablePanel>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>

