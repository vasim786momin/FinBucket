<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fin.kekanepc.finbucket.Calculator"
    android:background="#3b3347">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout">
            <com.michaldrabik.tapbarmenulib.TapBarMenu
                android:id="@+id/tapBarMenu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:tbm_buttonSize="40dp"
                app:tbm_showItems="false"
                app:tbm_backgroundColor="#00ffffff"
                app:tbm_buttonPosition="left"
                app:tbm_menuAnchor="top"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/item1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="45dp"
                    android:src="@drawable/homeee"
                    />
                <ImageView
                    android:id="@+id/item2"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:paddingBottom="3dp"
                    android:src="@drawable/tc"
                    />

                <ImageView
                    android:id="@+id/item3"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:paddingBottom="3dp"
                    android:src="@drawable/contactus"
                    />

                <ImageView
                    android:id="@+id/item4"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:paddingBottom="3dp"
                    android:src="@drawable/aboutus"
                    />
            </com.michaldrabik.tapbarmenulib.TapBarMenu>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/entry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/copy1"
                    android:layout_marginTop="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/copy3"
                        android:layout_marginTop="15dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/scrollView"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/interst"
                                android:padding="3dp"
                                android:background="@drawable/rounded_back" />
                            <EditText
                                android:id="@+id/edittext"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/rounded_edittext"
                                android:hint="10.25"
                                android:textColorHint="#b2b0b0"
                                android:textSize="16dp"
                                android:textColor="#ffffff"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="5dp"
                                android:inputType="numberDecimal" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#73ffffff"
                                android:text="Enter Rate of Interst"
                                android:textSize="12dp"
                                android:layout_marginLeft="50dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/copy4"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/scrollView"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/rupess"
                                android:padding="3dp"
                                android:background="@drawable/rounded_back" />
                            <EditText
                                android:id="@+id/edittext2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/rounded_edittext"
                                android:textColorHint="#b2b0b0"
                                android:hint="10000"
                                android:textSize="16dp"
                                android:textColor="#ffffff"
                                android:inputType="number"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="5dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#73ffffff"
                                android:text="Enter Loan Amount"
                                android:textSize="12dp"
                                android:layout_marginLeft="50dp" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/copy5"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/scrollView"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/calender"
                                android:padding="6dp"
                                android:background="@drawable/rounded_back"/>
                            <EditText
                                android:id="@+id/edittext3"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/rounded_edittext"
                                android:textColorHint="#b2b0b0"
                                android:hint="10"
                                android:textSize="16dp"
                                android:textColor="#ffffff"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="5dp"
                                android:inputType="numberDecimal" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#73ffffff"
                                android:text="Enter year&apos;s"
                                android:textSize="12dp"
                                android:layout_marginLeft="50dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/copy7"
                        android:layout_marginTop="30dp">
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp">
                            <Button
                                android:layout_width="170dp"
                                android:layout_height="40dp"
                                android:id="@+id/calculate"
                                android:text="Calculate"
                                android:background="@drawable/getemi"
                                android:textColor="#ffffff"
                                android:gravity="left|center"
                                android:paddingLeft="50dp"
                                android:textSize="20dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="EMI Calculator"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:typeface="serif"
                android:layout_marginTop="5dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultlayout"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Calculated Emi "
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#3d043f" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView4"
            android:gravity="center"
            android:text="kal"
            android:typeface="serif"
            android:textColor="#3d043f"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</RelativeLayout>
