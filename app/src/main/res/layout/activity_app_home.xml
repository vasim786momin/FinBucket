<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#3b3347">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slider"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:background="@null">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/button4"
                    android:textColor="#ffffff"
                    android:background="@drawable/hl"
                    android:typeface="normal"
                    android:textSize="14dp"
                    android:clickable="true" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/button5"
                    android:textColor="#ffffff"
                    android:background="@drawable/pl"
                    android:layout_marginLeft="3dp"
                    android:textSize="14dp"
                    android:typeface="normal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:background="@null"
                android:layout_marginTop="-9dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/button7"
                    android:textColor="#ffffff"
                    android:background="@drawable/bl"
                    android:layout_marginTop="2dp"
                    android:textSize="14dp"
                    android:typeface="normal" />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/button8"
                    android:textColor="#ffffff"
                    android:background="@drawable/ml"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"
                    android:textSize="14dp"
                    android:typeface="normal" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helllo User,This Application is very friendly to use.You can easily checkout for Loans from different bans ang get more details."
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="italic" />

        <com.michaldrabik.tapbarmenulib.TapBarMenu
            android:id="@+id/tapBarMenu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:tbm_buttonSize="40dp"
            app:tbm_showItems="false"
            app:tbm_backgroundColor="#00ffffff"
            app:tbm_buttonPosition="left"
            app:tbm_menuAnchor="top"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/item1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:layout_marginLeft="45dp"
                android:src="@drawable/homeee"
                />
            <ImageView
                android:id="@+id/item2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:src="@drawable/tc"
                />

            <ImageView
                android:id="@+id/item3"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:src="@drawable/contactus"
                />

            <ImageView
                android:id="@+id/item4"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:src="@drawable/aboutus"
                />
        </com.michaldrabik.tapbarmenulib.TapBarMenu>

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="172dp"
            app:pager_animation="Accordion"
            app:auto_cycle="true"
            app:indicator_visibility="visible"
            app:pager_animation_span="1100"
            android:layout_height="121dp"
            android:background="@drawable/finbucket_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />
    </RelativeLayout>


</ScrollView>